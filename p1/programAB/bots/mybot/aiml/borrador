 <category>
   <pattern>REPITE <set>number</set> * </pattern>
   <template>
     <think>
     
	<set var="contador">0</set>
	<set var="repeticiones"><star index="1"/></set>
	<set var="salida"><star index="2"/></set>
	
     </think>
	<condition var="contador">
	  <li><value><get var="repeticiones"/></value><get var="salida"/></li>
	  <li>
	    <think>
	    <set var="contador">
	      <map name="successor"><get var="contador"/></map>
	    </set>

	    <set var="salida">
	      <srai> <star index="2"/> </srai>
	    </set>
	    <star index="2"/>
	    <srai> <star index="2"/> </srai>
	    </think>
	    <loop/>
	  </li>
	  
	</condition>
	  
    </template>
  </category>
 

 
 